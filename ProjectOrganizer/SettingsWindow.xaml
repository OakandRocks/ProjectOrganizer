<Window x:Class="ProjectOrganizer.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="200" Width="300">
    <StackPanel Margin="10">
        <Label Content="Global Project Path:" />
        <TextBox x:Name="GlobalProjectPathTextBox" Margin="0,0,0,5" />
        <Button Content="Browse" Click="BrowseGlobalPath_Click" Margin="0,0,0,10" />

        <Label Content="Mode:" />
        <StackPanel Orientation="Horizontal">
            <RadioButton x:Name="CustomModeRadioButton" Content="Custom" IsChecked="True" Margin="0,0,10,0" Checked="ModeRadioButton_Checked" />
            <RadioButton x:Name="StandardModeRadioButton" Content="Standard" Margin="10,0,0,0" Checked="ModeRadioButton_Checked"/>
        </StackPanel>

        <Button Content="Save" Click="SaveButton_Click" Margin="0,10,0,0" />
    </StackPanel>
</Window>