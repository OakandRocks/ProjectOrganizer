<Window x:Class="ProjectOrganizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.com/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectOrganizer"
        Title="Project Organizer" Height="600" Width="900" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Section: Project Management -->
        <WrapPanel Margin="5">
            <Label Content="Select Project:" Margin="5,0,0,0" VerticalAlignment="Center"/>
            <ComboBox x:Name="ProjectComboBox" Width="150" Margin="5,0,10,0" SelectionChanged="ProjectComboBox_SelectionChanged"/>
            <Button Content="Add Project" Margin="5,0,10,0" Click="AddProjectButton_Click"/>
            <Button Content="Manage Project" Margin="5,0,10,0" Click="ManageProjectButton_Click"/>

            <Label Content="Global Project Path:" VerticalAlignment="Center" Margin="5,0,0,0"/>
            <TextBox x:Name="GlobalPathTextBox" Width="200" Margin="5,0,10,0" IsEnabled="False"/>
            <Button Content="Browse" Click="BrowseGlobalPathButton_Click" Margin="5,0,10,0"/>

            <Button Content="⚙" Click="OpenSettingsButton_Click" FontFamily="Segoe UI Symbol" FontSize="14" Margin="5,0,5,0" Padding="5,2" ToolTip="Opens settings dialog"/>
        </WrapPanel>

        <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" Margin="5">
            <Label Content="Drag and Drop Files Here (or CTRL+V)" Padding="10" HorizontalAlignment="Center" VerticalAlignment="Center" AllowDrop="True" Drop="ListBox_Drop" DragEnter="ListBox_DragEnter"/>
        </Border>

        <!-- List Section: Log Display -->
        <ListView x:Name="LogListView" Grid.Row="2" AllowDrop="False" KeyDown="LogListView_KeyDown" Margin="5">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Filename" Width="200" DisplayMemberBinding="{Binding Filename}"/>
                    <GridViewColumn Header="Filetype" Width="100" DisplayMemberBinding="{Binding Filetype}"/>
                    <GridViewColumn Header="Status" Width="150" DisplayMemberBinding="{Binding Status}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>